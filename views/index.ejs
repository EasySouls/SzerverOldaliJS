<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/global.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title><%= pageTitle %></title>
  </head>
  <body>
    <%- include('header') -%>

    <div class="d-flex content">
      <!-- Sidebar -->
      <%- include('sidebar') -%>

      <!-- Main Content -->
      <main class="container">
        <div class="d-flex flex-row w-100 justify-content-between pt-4 mb-4">
          <h2>Posts</h2>
          <button class="btn btn-success text-center">
            <a
              href="/posts/create"
              class="text-white text-decoration-none w-100 h-100"
              >Write a new post</a
            >
          </button>
        </div>
        <div class="d-flex flex-column gap-4 mb-4">
          <% for (post of posts) { %>
          <div class="bg-white shadow-sm rounded-2 p-2 shadow-sm border">
            <span class="flex-row gap-1 align-items-center pb-1">
              <h4 class="fw-semibold">
                <a href="/posts/<%= post._id %> " class="text-decoration-none">
                  <%= post.title %>
                </a>
              </h4>
              <a
                href="/users/<%= post.author._id %>"
                class="text-decoration-none"
                >@<%= post.author.usertag %></a
              >
            </span>
            <p class="overflow-auto"><%= post.body %></p>
            <p class="mt-1 text-secondary"><%= post.createdAt %></p>
          </div>
          <% } %>
        </div>
      </main>
    </div>

    <%- include('footer') -%>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
