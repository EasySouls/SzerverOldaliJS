<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/global.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title><%= pageTitle %></title>
  </head>
  <body>
    <%- include('header') -%>

    <div class="d-flex content">
      <!-- Sidebar -->
      <%- include('sidebar') -%>

      <!-- Main Content -->
      <main class="container">
        <div class="d-flex align-items-center">
          <h2 class="my-4"><%= person.username %>'s Profile</h2>
          <a
            href="/follows/<%= person._id %>"
            class="btn btn-primary text-decoration-none ms-4"
          >
            Follow
          </a>
        </div>
        <div style="display: flex; width: 100%; gap: 2rem">
          <div class="d-flex flex-column account-info">
            <h3 class="mb-4">Account Info</h3>
            <p>Name: <%= person.username %></p>
            <p>Tag: <%= person.usertag %></p>
            <p>Email: <%= person.email %></p>
          </div>
          <div class="d-flex flex-column gap-4 recent-posts">
            <h3>Recent posts</h3>
            <% for (post of locals.posts) { %>
            <div class="bg-white shadow-sm rounded-2 p-2 shadow-sm border">
              <span class="flex-row gap-1 align-items-center pb-1">
                <h4 class="fw-semibold">
                  <a
                    href="/posts/<%= post._id %> "
                    class="text-decoration-none"
                  >
                    <%= post.title %>
                  </a>
                </h4>
                <a href="#" class="text-decoration-none"
                  >@<%= post._author %></a
                >
              </span>
              <p class="overflow-auto"><%= post.body %></p>
              <p class="mt-1 text-secondary"><%= post.createdAt %></p>
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
    <%- include('footer') -%>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
